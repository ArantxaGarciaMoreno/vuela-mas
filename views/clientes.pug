extends base
block content
  .container.pt-4
    h2 Clientes 
    .row.mt-5
      .col-12
        table.table.bg-white
          thead
            tr
              th(scope='col') Pasaporte
              th(scope='col') Nombre
              th(scope='col') Apellido
              th(scope='col') Nacionalidad
              th(scope='col') Fecha de Nacimiento

          tbody
          - for (var i = 0; i < clientes.length; i++)
            tr
              th(scope='row') #{clientes[i].Pasaporte}
              td #{clientes[i].Nombre}
              td #{clientes[i].Apellido}
              td #{clientes[i].Nacionalidad}
              td #{clientes[i].FechaNacimiento}
              td
                form(action=`show/${clientes[i].ID}`,method="GET")
                  button.btn.btn-outline-danger(type='submit') Modificar
              td
                form(action=`delete/${clientes[i].ID}`,method="POST")
                  button.btn.btn-outline-danger(type='submit') Eliminar
        - if(clienteUpdate)
          h4.mt-5 Modificar Datos
            div.card.bg-dark
              div.card-body.text-white
                form(action=`update/${clienteUpdate[0].ID}` method="POST")
                  .form-group
                    label(for="Pasaporte") Pasaporte
                    input#Pasaporte.form-control(type="text" value=`${clienteUpdate[0].Pasaporte}` aria-describedby='Pasaporte' placeholder='Pasaporte' name='Pasaporte')
                  .form-group
                    label(for='Nombre') Nombre
                    input#Nombre.form-control(type='text' value=`${clienteUpdate[0].Nombre}` placeholder='Nombre' name='Nombre')
                  .form-group
                    label(for='Apellido') Apellido
                    input#Apellido.form-control(type='text' value= `${clienteUpdate[0].Apellido}` placeholder='Apellido' name='Apellido')
                  .form-group
                    label(for='Nacionalidad') Nacionalidad
                    input#Nacionalidad.form-control(type='text' value= `${clienteUpdate[0].Nacionalidad}` placeholder='Nacionalidad' name='Nacionalidad')
                  .form-group
                    label(for='FechaNacimiento') Fecha de Nacimiento
                    input#FechaNacimiento.form-control(type='date' value=`${clienteUpdate[0].FechaNacimiento}` placeholder='FechaNacimiento' name='FechaNacimiento')
                  button.btn.btn-danger(type="submit") Modificar
        h4.mt-5 Agregar un nuevo cliente
          div.card.bg-dark
            div.card-body.text-white
              form(action='create/' method="POST")
                .form-group
                    label(for="Pasaporte") Pasaporte
                    input#Pasaporte.form-control(type="text" aria-describedby='Pasaporte' placeholder='Pasaporte' name='Pasaporte')
                .form-group
                    label(for='Nombre') Nombre
                    input#Nombre.form-control(type='text' placeholder='Nombre' name='Nombre')
                .form-group
                    label(for='Apellido') Apellido
                    input#Apellido.form-control(type='text' placeholder='Apellido' name='Apellido')
                .form-group
                    label(for='Nacionalidad') Nacionalidad
                    input#Nacionalidad.form-control(type='text' placeholder='Nacionalidad' name='Nacionalidad')
                .form-group
                    label(for='FechaNacimiento') Fecha de Nacimiento
                    input#FechaNacimiento.form-control(type='date' placeholder='FechaNacimiento' name='FechaNacimiento')
                .form-group
                    button.btn.btn-primary(type='submit') Agregar