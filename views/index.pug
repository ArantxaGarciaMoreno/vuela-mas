extends base
block content
  .container.pt-4
    h2 Pasajes
    .row.mt-5
      .col-12
        table.table.bg-white
          thead
            tr
              th(scope='col') Numero
              th(scope='col') Reserva
              th(scope='col') Pasajero
              th(scope='col')
              th(scope='col')
          tbody
          - for (var i = 0; i < pasajes.length; i++)
            tr
              th(scope='row') #{pasajes[i].Numero}
              td #{pasajes[i].Reserva}
              td #{pasajes[i].Pasajero}
              td
                form(action=`show/${pasajes[i].Numero}`,method="POST")
                  button.btn.btn-outline-dark(type='submit') Detalle
              td
                form(action=`delete/${pasajes[i].Numero}`,method="POST")
                  button.btn.btn-outline-danger(type='submit') Eliminar
        //h4.mt-5 Crear Pasajes
        //form(action='create' method="POST")
          .form-group
            label(for='numero') Numero
            input#numero.form-control(type='text' aria-describedby='numero' placeholder='Numero' name='numero')
          .form-group
            label(for='precio') Precio
            input#precio.form-control(type='number' placeholder='Precio' name='precio')
          button.btn.btn-primary(type='submit') Crear